alue.setContent(`${post.code}`);\n    };\n    const getPostContent = () => {\n      try {\n        postData.value.code = editorInstance.value.getBody().outerHTML;\n      } catch (error) {\n        console.error(error);\n      }\n      if (!postData.value.title || !postData.value.description || !postData.value.image || !postData.value.code || !postData.value.category) {\n        alert(\"Uzupełnij wszystkie pola\");\n        return;\n      } else {\n        postBlogPost(postData.value);\n        location.reload(true);\n      }\n    };\n    const showPrew = () => {\n      try {\n        sessionStorage.setItem(\"content\", content.value);\n        window.open(\"/preview\", \"_blank\");\n      } catch (error) {\n        console.error(error);\n      }\n    };\n    const switchEditor = () => {\n      showNewPost.value = !showNewPost.value;\n    };\n    const __returned__ = {\n      router,\n      posts,\n      postData,\n      currentEdit,\n      showNewPost,\n      editorInstance,\n      activatePost,\n      updatePost,\n      onEditorInit,\n      editPost,\n      getPostContent,\n      showPrew,\n      switchEditor,\n      get Editor() {\n        return Editor;\n      },\n      onMounted,\n      ref,\n      get getBlogPosts() {\n        return getBlogPosts;\n      },\n      get useRouter() {\n        return useRouter;\n      },\n      get postBlogPost() {\n        return postBlogPost;\n      },\n      get usePosts() {\n        return usePosts;\n      },\n      get activateBlogPost() {\n        return activateBlogPost;\n      },\n      get editBlogPost() {\n        return editBlogPost;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["Editor","onMounted","ref","getBlogPosts","useRouter","postBlogPost","usePosts","activateBlogPost","editBlogPost","currentEdit","router","posts","postData","title","description","image","code","ca